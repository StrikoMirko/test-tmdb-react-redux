{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jasmine"
  ],
  "rules": {
    // Disabling func-names for now due to karma using old style in BeforeEach.
    "func-names": 0,
    "no-plusplus": 0,
    "no-mutable-exports": 0,
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 0,
    "class-methods-use-this": 0,
    "arrow-body-style": 0,
    "react/require-default-props": 0,
    "function-paren-newline": 0,
    "arrow-parens": 0,
    "consistent-return": 0,
    "react/forbid-prop-types": [1, { "forbid": ["array", "any"] }],
    "no-console": "off",
  },
  "env": {
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "Drupal": true
  }
}
